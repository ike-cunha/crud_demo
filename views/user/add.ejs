<%- include ../layouts/header.ejs %>    

<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
 
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>
 
<form action="/users/add" method="post" name="form1">
    <table width="25%" border="0">
        <tr> 
            <td>Nome</td>
            <td><input type="text" name="nome" id="nome" value="<%= nome %>" /></td>
        </tr>
        <tr> 
            <td>Idade</td>
            <td><input type="text" name="idade" value="<%= idade %>" /></td>
        </tr>
        <tr> 
            <td>Instrumento que toca</td>
            <td><input type="text" name="instrumentoToca" value="<%= instrumentoToca %>" /></td>
        </tr>
        <tr> 
            <td>Email</td>
            <td><input type="text" name="email" value="<%= email %>" /></td>
        </tr>
        <tr> 
            <td></td>
            <td><input type="submit" name="Submit" value="Adicionar" /></td>
        </tr>
    </table>
</form>
<%- include ../layouts/footer.ejs %>